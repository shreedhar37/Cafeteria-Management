<div class ="container text-center ">
<h1> Sign-Up </h1>
</div>


<div class="container text-center ">
    <% if flash[:notice] %>
    <div class= "alert alert-success ">
            <%= flash[:notice] %>
    </div>
            <% flash.clear %>
    <% end %>
</div>

<div class=" d-flex align-items-center  justify-content-center ">
<%= form_with  model: @user, url: users_path do |form|%>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <div> <%= message %> </div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-3 ">
          <%= form.label :first_name, class:"mb-1" %>
          <%= form.text_field :first_name, class: "form-control w-auto", placeholder: "Steve" %>
    </div>

    <div class="mb-3">
        <%= form.label :last_name, class:"mb-1" %>
        <%= form.text_field :last_name, class: "form-control w-auto", placeholder:"Jobs" %>
    </div>

    <div class="mb-3" >
            <%= form.label :email, class:"mb-1" %>
            <%= form.email_field :email, class:"form-control w-auto", placeholder:"stevejobs@apple.com" %>
    </div>

    <div class="mb-3">
            <%= form.label :password, class:"mb-1" %>
            <%= form.password_field :password, class:"form-control w-auto", placeholder:"password"%>
    </div>

    <div class="mb-3">
            <%= form.label :confirm_password,  class:"mb-1" %>
            <%= form.password_field :password_confirmation, class:"form-control w-auto", placeholder:"password" %>
    </div>

    <div class="mb-3">
         <%=  form.submit "Sign-Up", class: "btn btn-primary" %>
    </div>

<% end %>
</div>
