<div class ="container text-center ">
<h1> Add a New Menu </h1>
</div>


<div class="container text-center ">
    <% if flash[:notice] %>
    <div class= "alert alert-success ">
            <%= flash[:notice] %>
    </div>
            <% flash.clear %>

     <% elsif flash[:error] %>
            <div class= "alert alert-danger ">
                    <%= flash[:error] %>
            </div>
            <% flash.clear %>
    <% end %>
</div>

<div class=" d-flex align-items-center  justify-content-center ">
<%= form_with url: "/menu_category/create" , method: "post"  do |form|%>

    <div class="mb-3 ">
          <%= form.label :"Category", class:"mb-1" %>
          <%= form.text_field :name,
                                                    class: "form-control w-auto",
                                                    placeholder: "Cakes",
                                                    :required => true
          %>
    </div>

     <div class="mb-3 ">
          <%= form.label :"Menu Item Name", class:"mb-1" %>
          <%= form.text_field :menu_item_name,
                                                      class: "form-control w-auto",
                                                      placeholder: "Cup Cakes",
                                                      :required => true
           %>
    </div>

    <div class="mb-3">
        <%= form.label :Description, class:"mb-1" %>
        <%= form.text_field :description,
                                                    class: "form-control w-auto",
                                                    placeholder:"Chocolate Cup Cake",
                                                   :required => true
        %>
    </div>

    <div class="mb-3">
    <%= form.label :Price, class:"mb-1" %>
    <%= form.number_field :price,
                                                        class:"form-control w-auto",
                                                        placeholder:"300.00",
                                                        step: 0.5,
                                                        :required => 'required'
     %>
     </div>

    <div class="mb-3">
         <%=  form.submit "Add", class: "btn btn-success" %>
    </div>

<% end %>
</div>
