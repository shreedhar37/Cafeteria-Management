<div class="table-responsive">
  <table class="table">
        <tr>
        <th>id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
        </tr>
  <% @users.order(:id).each  do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
        </tr>
  <% end%>
  </table>
</div>
