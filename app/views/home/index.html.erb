<div class ="text-center m-auto w-auto">
<h1> Welcome to Cafeteria-Management </h1>
</div>

<div class="text-center m-auto w-auto ">
    <% if flash[:notice] %>
    <div class= "alert alert-success ">
            <%= flash[:notice] %>
    </div>
    <% end %>

<% if @user || @owner %>
    <% role = @user.present? ? @user : @owner %>
    <span class="m-auto w-auto">Logged in as: <%= role.first_name + " " + role.last_name %></span>
    <%= button_to "Logout", logout_path, class:"mt-3  btn btn-primary", method:"delete" %>

<% end %>
</div>
