<h1> Sign-In </h1>

<% if flash[:alert] %>
    <div class="alert alert-danger">
        <%= flash[:alert] %>
    </div>
<% end %>

<%= form_with url: users_sign_in_path  do |form| %>
    <div class="mb-3" >
    <%= form.label :email %>
    <%= form.email_field :email, class:"form-control", placeholder:"stevejobs@apple.com" %>
    </div>

    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placeholder:"password"%>
    </div>

    <div class="mb-3">
    <%=  form.submit "Sign-In", class: "btn btn-primary" %>
    </div>
<% end %>
